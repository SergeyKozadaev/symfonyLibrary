{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h2>Отредактируем данные книги!</h2>

        {{ form_errors(bookForm) }}

        {{ form_start(bookForm) }}

        <div class="left">
            {% if bookForm.coverImage.vars.data is not null  %}
                <img src="{{ imgResize(bookForm.coverImage.vars.data, 240, 320) }}">
                <br>
                <br>
                <a href="{{ path('app_delete_image', {id: id}) }}" class="btn btn-danger js-image-delete">Удалить файл обложки</a>
            {% endif %}
        </div>

        <div class="right">
            {{ form_row(bookForm.title) }}
            {{ form_row(bookForm.author) }}
            {{ form_row(bookForm.addedDate) }}

            {% if bookForm.file.vars.data is not null  %}
                {{ form_row(bookForm.downloadable) }}
                <a href="{{ path('app_delete_file', {id: id}) }}" class="btn btn-danger js-file-delete">Удалить файл книги</a>
            {% else %}

            {% endif %}

            <a href="{{ path('app_delete_book', {id: id}) }}" class="btn btn-danger js-book-delete">Удалить книгу</a>

            <button type="submit" class="btn btn-primary">Обновить</button>
        </div>

        {{ form_row(bookForm._token) }}
        {{ form_end(bookForm, {'render_rest': false}) }}
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('/js/book.js') }}"></script>
{% endblock %}