{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h2>Добавим новую книгу!</h2>

        {{ form_start(bookForm) }}
            {{ form_row(bookForm.title) }}
            {{ form_row(bookForm.author) }}
            {{ form_row(bookForm.addedDate) }}
            {{ form_row(bookForm.downloadable) }}
            {{ form_row(bookForm.coverImage) }}
            {{ form_row(bookForm.file) }}

        <div class="form-group">
            <input type="submit" class="btn btn-primary" id="_submit" name="_submit" value="Добавить книгу" />
        </div>
        {{ form_end(bookForm) }}
    </div>
{% endblock %}